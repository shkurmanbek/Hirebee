<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_background01"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back" />

        <ImageView
            android:id="@+id/imageviewTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/logo" />
    </RelativeLayout>

    <EditText
        android:id="@+id/nameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Имя"
        android:padding="10dp"
        android:layout_below="@id/toolbarRl"
        android:layout_marginLeft="30dp"
        android:textColorHint="@color/white"
        />

    <EditText
        android:id="@+id/surnameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameEt"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:hint="Фамилия"
        android:padding="10dp"
        android:paddingRight="100dp"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/dobEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surnameEt"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:hint="Дата рождения"
        android:padding="10dp"
        android:textColorHint="@color/white" />
    <EditText
        android:id="@+id/mobileEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dobEt"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:hint="Мобильный номер"
        android:padding="10dp"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/emailEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobileEt"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:hint="Электронный адрес"
        android:padding="10dp"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/passwordEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailEt"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/cpasswordEt"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordEt"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:hint="Подтвердите пароль"
            android:inputType="textPassword"
            android:textColorHint="@color/white" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpasswordEt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-light"
        android:paddingHorizontal="50dp"
        android:paddingVertical="10dp"
        android:text="Регистрация"
        android:textAllCaps="false"
        android:textColor="@color/white" />
        <Button
            android:id="@+id/signinBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="У вас уже есть аккаунт? Войти"
            android:fontFamily="sans-serif-light"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:layout_below="@id/registerBtn"
            android:padding="10dp"
            android:textColor="@color/white"
            android:paddingHorizontal="25dp"
            />

</RelativeLayout>